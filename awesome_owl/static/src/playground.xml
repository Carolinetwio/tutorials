<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.playground">
        <div class="p-3">
            hello world
            <div>
            <t t-foreach="values" t-as="value" t-key="value_index">
                <Counter value="value" onChange.bind="() => this.incrementValue(value_index)" />
            </t>
            </div>
            <div>The sum is: <t t-esc="sum"/></div>
        </div>
        <div>
            <Card>
                <t t-set-slot="title">
                   slot title 1
                </t>
                adsfdsaf <button>button</button>
            </Card>
            <Card>
                <t t-set-slot="title">
                   slot title 2
                </t>
                <Counter value="values[0]" onChange.bind="() => this.incrementValue(0)"/>
            </Card>
        </div>
        <TodoList />
    </t>

</templates>
